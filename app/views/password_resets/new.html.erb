<h1 class="text-center font-weight-bold mt-2">Reset your password</h1>
<%= form_for(:password_reset, url: password_resets_path, html: { class: "col-md-5 mx-auto"}) do |f| %>
	<div class="align-items-center p-3 my-3 bg-white rounded shadow-sm">
		<%= f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "form-control" %>
		<%= f.submit 'Submit', class: "btn btn-lg btn-primary btn-block mb-1 mt-3" %>
	</div>
<% end %>
