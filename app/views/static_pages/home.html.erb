<% if @user %>
	<div class="row">
		<div class="col-md-4">
			<div class="align-items-center p-3 my-3 bg-white rounded shadow-sm">
				<%= render "users/label" %>
			</div>
			<div class="align-items-center p-3 my-3 bg-white rounded shadow-sm">
				<%= form_for(@create_post) do |f| %>
					<%= render 'layouts/error_of_validation', object: f.object %> <!--FIX-->
					<%= f.text_area :content, placeholder: "Compose new post...", class: "w-100 form-control" %>
					<%= f.submit "Post", class: "btn btn-lg btn-primary btn-block text-center mt-2" %>
				<% end %>
			</div>
		</div>
		<div class="col-md-8">
			<div class="p-3 my-3 bg-white rounded shadow-sm">
				<%= render "posts/for_users" %>
			</div>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Sample App</h1>
		<h2>
			This is the home page for the
			<%= link_to  "Ruby on Rails Tutorial", "http://rubyonrails.org/" %>
			sample application.
		</h2>
		<%= link_to "Sign up now!", :signup, class: "btn btn-lg btn-primary" %>
	</div>
	<%= link_to image_tag("logo.png", alt: "Rails logo", size: "165x200"), "http://rubyonrails.org/" %>
	<%= request.url %>
<% end %>
