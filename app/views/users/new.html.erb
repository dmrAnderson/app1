<h1>Sing Up</h1>

	<%= render 'layouts/error_of_validation' %>
	
	<%= form_for(@user) do |f| %>
		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :email %><br>
			<%= f.email_field :email %>
		</p>
		<p>
			<%= f.label :password %><br>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.submit 'Submit', class: 'btn btn-dark' %>
		</p>
	<% end %>