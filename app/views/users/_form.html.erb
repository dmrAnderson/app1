<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render "layouts/error_of_validation" %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, class: "form-control" %>
				<small class="text-muted">Must be 6-20 characters long.</small>
			</div>
			<% if (action_name == "update" || action_name == "edit") %>
				<div class="form-group">
					<%= f.label :password_confirmation, "Confirmation" %>
					<%= f.password_field :password_confirmation, class: "form-control" %>
				</div>
			<% end %>
			<div class="form-group">
				<% color = action_name == "new" ? "dark" : "success" %>
				<%= f.submit "Submit", class: "btn btn-#{color}" %>
				<%= link_to "Delete", @user, method: :delete, class: "btn btn-outline-danger" %>
				<%= link_to  "Back", :root, class: "btn btn-outline-secondary" %>
			</div>
		<% end %>
	</div>
</div>
