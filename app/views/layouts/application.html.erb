<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<header class='jumbotron text-center'>--</header>
		<nav class='navbar navbar-expand-sm bg-dark navbar-dark'>
				<%= link_to image_tag('logo', size: '50x30'), :root, class: 'navbar-brand' %>
				<%= link_to 'Home', :root, class: 'navbar-brand' %>
		    <ul class='navbar-nav'>
					<% if current_user %>
						<li class='nav-item'>
							<%= link_to current_user.name, user_path(session[:user_id]), class: 'nav-link' %>
						</li>
						<li class='nav-item'>
		      	  <%= link_to  'Sign Out', signout_path, class: 'nav-link' %>
		      	</li>
					<% else %>
		      	<li class='nav-item'>
		        	<%= link_to  'Sign Up', signup_path, class: 'nav-link' %>
		      	</li>
						<li class='nav-item'>
		      	  <%= link_to  'Sign In', signin_path, class: 'nav-link' %>
		      	</li>
					<% end %>
		    </ul>
		  </div>  
		</nav>
		<div class='container'>
			<% flash.each do |name, message| %>
				<div class='alert alert-<%= name %>'>
					<%= message %>
				</div>
			<% end %>
    	<%= yield %>
		</div>
		<footer class='jumbotron text-center'>--</footer>
  </body>
</html>
