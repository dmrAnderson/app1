<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
		<header class='jumbotron text-center'>--</header>
		<nav class='navbar navbar-expand-sm bg-dark navbar-dark'>
				<%= link_to 'Home', root_path, class: 'navbar-brand' %>
		    <ul class='navbar-nav'>
		      <li class='nav-item'>
		        <%= link_to  'Sing Up', singup_path, class: 'nav-link' %>
		      </li>
					<li class='nav-item'>
		      	  <%= link_to  'Sing In', singin_path, class: 'nav-link' %>
		      </li>
					<% if current_user %>
						<li class='nav-item'>
		      	  <%= link_to  'Sing Out', singout_path, class: 'nav-link' %>
		      	</li>
					<% end %>
					<li class='nav-item'>
					#
		      </li>
		    </ul>
		  </div>  
		</nav>
		<div class='container'>
		  <%= current_user.name	if current_user %>
			<%= notice %>
    	<%= yield %>
		</div>
		<footer class='jumbotron text-center'>--</footer>
  </body>

</html>
