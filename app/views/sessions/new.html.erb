<div class="mx-auto col-md-5">
	<%= form_for(:session, url: signin_path, html: {class: "align-items-center p-3 my-3 bg-white rounded shadow-sm"}) do |f| %>
		<h2 class="mb-3 text-center font-weight-bold">Sign In</h2>
		<%= f.email_field :email, autofocus: true, placeholder: "Email address", class: "form-control mb-3" %>
		<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
		<%= link_to  "Fogot the password?", new_password_reset_path, class: "small" %>
		<div class="custom-control custom-checkbox text-center mb-3">
			<%= f.check_box :remember_me, class: "custom-control-input" %>
			<%= f.label :remember_me, class: "custom-control-label" %>
		</div>
		<%= f.submit 'Submit', class: "btn btn-lg btn-primary btn-block mb-1" %>
		<p class="small">New user? <%= link_to "Sign Up!", :signup %></p>
	<% end %>
</div>
